<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinh2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        android:textColor="#1532D5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="51dp"
        android:text="Please login or sign up to conntinue using our app"
        android:textSize="18dp"
        android:textColor="#000002"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter via Social Networks"
        android:textColor="#1532D5"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="363dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="107dp"
        android:src="@drawable/fb"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="226dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="112dp"
        android:src="@drawable/tw"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or login with email"
        android:textColor="#1532D5"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="409dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="372dp"
        android:layout_height="57dp"
        android:background="@drawable/butsignin"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="623dp"
        />

    <TextView
        android:id="@+id/textView5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You already have an account?"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="696dp"
        android:textColor="#000315"/>

    <EditText
        android:id="@+id/user"
        android:layout_width="241dp"
        android:layout_height="51dp"
        android:background="#FFFF"
        android:drawableLeft="@drawable/username"
        android:hint="  Username"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="442dp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#1532D5"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="696dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="241dp"
        android:layout_height="51dp"
        android:background="#FFFF"
        android:drawableLeft="@drawable/password"
        android:hint="  Password"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="502dp" />


    <CheckBox
        android:id="@+id/checkBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I gree with privacy poikey"
        android:textColor="#0829E3"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="563dp" />
</androidx.constraintlayout.widget.ConstraintLayout>